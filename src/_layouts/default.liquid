<!doctype html>
<html lang="he" dir='rtl'>

<head>
    {% render "head", metadata: site.metadata, title: page.title %}
</head>

<body data-controller='nav' class="{{ page.layout }} {{ page.page_class }}">
    {% render "navbar", metadata: site.metadata, page: page.layout %}

    <main id='main'>
        {{ content }}
    </main>
    {% render "scroll_top" %}
    <script>
        if (window.netlifyIdentity) {
          window.netlifyIdentity.on("init", user => {
            if (!user) {
              window.netlifyIdentity.on("login", () => {
                document.location.href = "/admin/";
              });
            }
          });
        }
      </script>
</body>

</html>